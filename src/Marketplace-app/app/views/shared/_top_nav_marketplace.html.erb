<div class="container-fluid bg-dark">
  <header class="container pt-3 border-bottom">
     <div class="row ">
      <div class="col d-flex justify-content-start">
        <div class="hamburger d-flex">
            <input type="checkbox" id="toggle_hamburger"> 
            <label class="my-0" for="toggle_hamburger"><i class="fas fa-bars fa-2x", style="color: pink;"></i></label>
            <div class="menu_hamburger container">
              <div class="search_products">
                <div class="dropdown container-fluid bg-light border-bottom">
                  <button class="btn text-muted" type="button" data-toggle="collapse" data-target="#collapseExample1" aria-expanded="false" aria-controls="collapseExample1">
                    Styles
                  </button>
                  <div class="collapse" id="collapseExample1">
                    <div class="card card-body">
                      <%= link_to "Mini", listings_path(style_id: 1), class: "dropdown-item" %>
                      <%= link_to "Midi", listings_path(style_id: 2), class: "dropdown-item" %>
                      <%= link_to "Full Length", listings_path(style_id: 3), class: "dropdown-item" %>
                      <%= link_to "Formal", listings_path(style_id: 4), class: "dropdown-item" %>
                      <%= link_to "Other", listings_path(style_id: 6), class: "dropdown-item" %>
                    </div>
                  </div>
                </div>
                <div class="dropdown container-fluid bg-light border-bottom">
                  <button class="btn text-muted" type="button" data-toggle="collapse" data-target="#collapseExample2" aria-expanded="false" aria-controls="collapseExample2">
                    Brands
                  </button>
                  <div class="collapse" id="collapseExample2">
                    <div class="card card-body">
                      <%= link_to "Zimmerman", listings_path(brand_id: 1), class: "dropdown-item" %>
                      <%= link_to "Nookie", listings_path(brand_id: 2), class: "dropdown-item" %>
                      <%= link_to "Bec + Bridge", listings_path(brand_id: 3), class: "dropdown-item" %>
                      <%= link_to "Jadore", listings_path(brand_id: 4), class: "dropdown-item" %>
                      <%= link_to "Other", listings_path(brand_id: 6), class: "dropdown-item" %>
                    </div>
                  </div>
                </div>
                <div class="dropdown container-fluid bg-light border-bottom">
                  <button class="btn text-muted" type="button" data-toggle="collapse" data-target="#collapseExample3" aria-expanded="false" aria-controls="collapseExample3">
                    Locations
                  </button>
                  <div class="collapse" id="collapseExample3">
                    <div class="card card-body">
                      <%= link_to "New South Wales", listings_path(state_id: 1), class: "dropdown-item" %>
                      <%= link_to "Victoria", listings_path(state_id: 2), class: "dropdown-item" %>
                      <%= link_to "South Australia", listings_path(state_id: 3), class: "dropdown-item" %>
                      <%= link_to "Queensland", listings_path(state_id: 5), class: "dropdown-item" %>
                      <%= link_to "Western Australia", listings_path(state_id: 6), class: "dropdown-item" %>
                    </div>
                  </div>
                </div>
              </div>
              <div class="profile_links">
                <div class="container-fluid bg-dark border-bottom py-2 row">
                  <div class="col border-right">
                    <% if user_signed_in? %>
                      <%= link_to "My Account", profile_path(current_user.id)%>
                    <% else %>
                      <%= link_to "Sign In", new_user_session_path %>
                    <% end %>
                  </div>
                  <div class="col">
                    <% if user_signed_in? %>
                      <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
                    <% else %>
                      <%= link_to "Register", new_user_registration_path %>
                    <% end %>
                  </div>
                </div>
                <% if user_signed_in? %>
                  <div class="container-fluid bg-dark border-bottom py-2 ">
                    <a href="<%= conversations_path %>">Messages</a>
                  </div>
                  <div class="container-fluid bg-dark border-bottom py-2 ">
                    <a href="<%= listings_dashboard_path %> ">Manage Listing</a>
                  </div>
                  <div class="container-fluid bg-dark border-bottom py-2 ">
                    <a href="<%= new_listing_path %>">Create Listing</a>
                  </div>
                <% end %>  
                <div class="container-fluid bg-dark py-2 border-bottom">
                  <a href="<%= root_path %>">BrandName Online</a>
                </div>
                <div class="container-fluid bg-dark border-bottom py-2 ">
                  <a href="#">Contact us</a>
                </div>
              </div>
            </div>
        </div>
      </div>
      <div class="col d-flex justify-content-center">
        <div class="d-flex justify-content-center align-items-end pb-2">
          <a href="<%= listings_path %>"> <h3>BrandName Marketplace</h3></a>
        </div>
      </div>
      <div class="col d-flex justify-content-end">
        <div class="col-4 d-flex justify-content-end align-items-center pb-2">
          <div class="btn btn-sm btn-outline-secondary">
            <input type="checkbox" id="toggle_profile">
            <label for="toggle_profile" class="mb-0"><i class="far fa-user-circle fa-lg", style="color: pink;"></i></label>
            <div class="menu_profile border">
              <div class="row container py-2 mx-0 bg-light border-bottom">
                <div class="col">
                  <% if user_signed_in? %>
                    <a href="#">Hello</a>
                  <% else %>
                    <%= link_to "Sign In", new_user_session_path %>
                  <% end %>
                </div>
                <div class="col border-left">
                  <% if user_signed_in? %>
                    <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
                  <% else %>
                    <%= link_to "Register", new_user_registration_path %>
                  <% end %>
                </div>
              </div>
              <% if user_signed_in? %>
                <div class="container py-2 bg-light border-bottom">
                  <%= link_to "My Account", profile_path(current_user.id)%>
                </div>
                <div class="container py-2 bg-light border-bottom">
                  <a href="<%= conversations_path %>">Messages</a>
                </div>
                <div class="container py-2 bg-light border-bottom">
                  <a href="<%= listings_dashboard_path %> ">Manage Listings</a>
                </div>
                <div class="container py-2 bg-light border-bottom">
                  <a href="<%= new_listing_path %>">Create Listing</a>
                </div>
              <% end %>

              <div class="container py-2 bg-light">
               <a href="#">Contact Us</a>
              </div>
            </div>
          </div>   
          <a class="btn btn-sm btn-outline-secondary" href="<%= conversations_path %>"><i class="far fa-envelope fa-lg", style="color: pink;"></i></a>
        </div>  
      </div>
    </div>
  </header>

